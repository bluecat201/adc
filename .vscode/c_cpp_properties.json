{
    "env": {
        "myDefaultIncludePath": [
            "${workspaceFolder}",
            "${workspaceFolder}/inc"
        ],
        "myCompilerPath": "/usr/bin/sdcc"
    },
    "configurations": [
        {
            "name": "STM8",
            "includePath": [
                "${workspaceFolder}/inc",
                "${workspaceFolder}/src",
                "${workspaceFolder}/../SPL/inc/",
                "${workspaceFolder}/SPL/inc/"
            ],
            "defines": [
                "STM8S",
                "_SDCC_"
            ],
            "compilerPath": "/usr/bin/sdcc",
            "cStandard": "c99",
            "cppStandard": "c++11",
            "intelliSenseMode": "gcc-x64",
            "compilerArgs": [
                "-I inc",
                "-I SPL/inc",
                "-I ../SPL/inc",
                "-mstm8",
                "-lstm8",
                "--std-sdcc99"
            ]
        }
    ],
    "version": 4
}
